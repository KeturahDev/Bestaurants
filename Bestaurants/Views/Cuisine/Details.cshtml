@{Layout="_Layout";}

@using Bestaurant.Models;
@model Bestaurant.Models.Cuisine;
<h1>Cuisine Details</h1>

<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@foreach(Restaurant restaurant in Model.Restaurants)
{
  <p>@Html.ActionLink($"{restaurant.Name}", "Details", "Restaurant", new {id = restaurant.RestaurantId})</p>
}

<p>@Html.ActionLink("Add new restaurant", "Create", "Restaurant")</p>
<p>@Html.ActionLink("Edit this Cuisine", "Edit", new { id = Model.CuisineId } )</p>
<p>@Html.ActionLink("Delete this Cuisine", "Delete", new { id = Model.CuisineId } )</p>

